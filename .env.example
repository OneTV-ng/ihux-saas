# Better Auth Configuration
BETTER_AUTH_SECRET=your-better-auth-secret-key
BETTER_AUTH_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here

# Web Push Notifications (VAPID Keys)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-public-vapid-key
VAPID_PRIVATE_KEY=your-private-vapid-key

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

AUTH_GOOGLE_ID=your-google-client-id
AUTH_GOOGLE_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

AUTH_SPOTIFY_ID=your-spotify-client-id
AUTH_SPOTIFY_SECRET=your-spotify-client-secret

FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Database Configuration
MYSQL_HOST=your-database-host
MYSQL_PORT=3306
MYSQL_USER=your-database-user
MYSQL_PASSWORD=your-database-password
MYSQL_DB=your-database-name

# Database Dialect: postgresql, mysql, sqlite
DB_DIALECT=mysql

# Database URL (use one based on your DB_DIALECT)
# PostgreSQL: postgresql://user:password@host/dbname?sslmode=require
# MySQL: mysql://user:password@host/dbname
# SQLite: file:./sqlite.db
DATABASE_URL=mysql://your-database-user:your-database-password@your-database-host/your-database-name

